    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sky_blue"
    tools:context="com.weatherreport.WeatherDetails">

    <include
        android:id="@+id/tbDetails"
        layout="@layout/toolbar"/>
